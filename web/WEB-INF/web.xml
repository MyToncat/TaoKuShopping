<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>regist</servlet-name>
        <servlet-class>com.hk.controller.DoRegist</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>regist</servlet-name>
        <url-pattern>/regist</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hk.controller.Dologin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.hk.controller.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DOUserExistServlet</servlet-name>
        <servlet-class>com.hk.controller.DOUserExistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DOUserExistServlet</servlet-name>
        <url-pattern>/userexits</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductCategoryServlet</servlet-name>
        <servlet-class>com.hk.controller.ProductCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCategoryServlet</servlet-name>
        <url-pattern>/ProductCategory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductNewServlet</servlet-name>
        <servlet-class>com.hk.controller.ProductNewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductNewServlet</servlet-name>
        <url-pattern>/newproduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>com.hk.controller.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/DoProductDetail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hk.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>